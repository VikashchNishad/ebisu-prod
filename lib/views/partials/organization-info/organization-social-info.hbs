<ul class="social">
    {{#if orgInfo.facebookURL}}
        <li>
            <a href="{{orgInfo.facebookURL}}" target="_blank" class="Facebook">
                <i class="ion-social-facebook"></i>
            </a>
        </li>{{/if}}
    {{#if orgInfo.twitterURL}}
        <li>
            <a href="{{orgInfo.twitterURL}}" target="_blank" class="Twitter" style="padding-right: 3px;">
                <i class="ion-social-twitter"></i>
            </a>
        </li>{{/if}}
    {{#if orgInfo.linkedInURL}}
        <li>
            <a href="{{orgInfo.linkedInURL}}" target="_blank" class="Linkedin" style="padding-right: 6px;">
                <i class="ion-social-linkedin"></i>
            </a>
        </li>{{/if}}
    {{#if orgInfo.googlePlusURL}}
        <li>
            <a href="{{orgInfo.googlePlusURL}}" target="_blank" class="Google Plus" style="padding-right: 3px;">
                <i class="ion-social-googleplus"></i>
            </a>
        </li> {{/if}}
</ul>